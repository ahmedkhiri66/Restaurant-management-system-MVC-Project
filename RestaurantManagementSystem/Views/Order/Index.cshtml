@model List<Order>

<h2>Orders</h2>
<a asp-action="Create" class="btn btn-primary mb-3">New Order</a>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

<table class="table">
    <tr>
        <th>ID</th>
        <th>Customer</th>
        <th>Total</th>
        <th>Status</th>
        <th>Actions</th>
    </tr>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.CustomerName</td>
            <td>$@order.Total.ToString("0.00")</td>
            <td>@order.Status</td>
            <td>
                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info">View</a>
                <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>