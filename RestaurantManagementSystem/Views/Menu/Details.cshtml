@model MenuItem

@{
    ViewData["Title"] = "Menu Item Details";
}

<h1>@Model.Name</h1>

<div>
    <h4>@ViewBag.Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            $@Model.Price.ToString("0.00")
        </dd>
        <dt class="col-sm-2">
            Preparation Time
        </dt>
        <dd class="col-sm-10">
            @Model.PreparationTime minutes
        </dd>
    </dl>
</div>
